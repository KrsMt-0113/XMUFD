{
  "manifest_version": 3,
  "name": "XMUFD",
  "version": "1.0.0",
  "description": "下载课程附件的浏览器扩展，适用于厦门大学数字教育平台（lnt.xmu.edu.cn）。",
  "permissions": [
    "webRequest",
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "https://lnt.xmu.edu.cn/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://lnt.xmu.edu.cn/*"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}
